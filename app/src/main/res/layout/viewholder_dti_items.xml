<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dtiCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            android:padding="5dp"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dtiProduct"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:background="@color/grey"
            android:padding="5dp"
            android:text="Product"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dtiCategory" />

        <TextView
            android:id="@+id/tv_dtiBrand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/smoky"
            android:padding="5dp"
            android:text="Brand"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/tv_dtiUnit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dtiProduct" />

        <TextView
            android:id="@+id/tv_dtiUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/teal_200"
            app:layout_constraintEnd_toStartOf="@+id/tv_dtiSrp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_dtiBrand"
            app:layout_constraintTop_toTopOf="@+id/tv_dtiBrand" />

        <TextView
            android:id="@+id/tv_dtiSrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:padding="5dp"
            android:text="SRP"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_dtiUnit"
            app:layout_constraintTop_toTopOf="@+id/tv_dtiBrand" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>