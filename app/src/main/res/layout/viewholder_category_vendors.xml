<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_vendorPic"
            android:layout_width="80dp"
            android:layout_height="80dp" />


        <TextView
            android:id="@+id/tv_vendorUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_vendorPic"
            android:text="Vendor Username"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_vendorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_vendorUsername"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_vendorPic"
            android:text="Vendor Name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_vendorNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_vendorName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_vendorPic"
            android:text="Vendor Number"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>



</androidx.cardview.widget.CardView>